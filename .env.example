POSTGRES_PASSWORD=Ch@ng3m3!
# ---------------------------------
# Step-CA / Traefik ACME
# ---------------------------------
# Contraseña de la CA (usada durante step ca init)
DOCKER_STEPCA_INIT_PASSWORD=secret
# Email de administración para ACME provisioner
STEPCA_ADMIN_EMAIL=admin@local.test
# Nombre de tu CA interna
STEPCA_NAME=LocalCA
# DNS de la CA
STEPCA_DNS=ca.localdomain.lan
# Dirección donde servirá step-ca (puede ser interna)
STEPCA_ADDRESS=:9000

# ---------------------------------
# Dominios de tus servicios
# ---------------------------------
# Dominio de Arcane
ARCANE_DOMAIN=arcane.localdomain.lan

# Dominio de Kanban
TASKS_DOMAIN=tasks.localdomain.lan

# Puedes añadir más dominios aquí, por ejemplo:
# SERVICE3_DOMAIN=service3.localdomain.lan
# SERVICE4_DOMAIN=service4.localdomain.lan

# ---------------------------------
# Traefik
# ---------------------------------
# Email para ACME (aunque usamos Step-CA, algunas configs lo requieren)
TRAEFIK_EMAIL=admin@local.test

# Opcional: puerto de Traefik (web:80, websecure:443, api:8080)
TRAEFIK_WEB_PORT=80
TRAEFIK_WEBSECURE_PORT=443
TRAEFIK_API_PORT=8080
